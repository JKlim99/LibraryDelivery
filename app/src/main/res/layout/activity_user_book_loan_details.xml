<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UserBookDetails">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="match_parent"
                android:layout_height="433dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="10dp"
                android:background="@color/white"
                android:backgroundTint="@color/white"
                android:padding="3dp" />

            <TextView
                android:id="@+id/idLabel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/textPadding"
                android:text="ID"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/bookIdText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/textPadding"
                android:text="TextView" />

            <TextView
                android:id="@+id/isbnLabel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/textPadding"
                android:text="ISBN"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/isbnText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/textPadding"
                android:text="TextView" />

            <TextView
                android:id="@+id/bookNameLabel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/textPadding"
                android:text="Book Name"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/bookNameText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/textPadding"
                android:text="TextView" />

            <TextView
                android:id="@+id/categoryLabel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/textPadding"
                android:text="Category"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/categoryText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/textPadding"
                android:text="TextView" />

            <TextView
                android:id="@+id/statusLabel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/textPadding"
                android:text="Status"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/statusText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/textPadding"
                android:text="TextView" />

            <TextView
                android:id="@+id/loanedDateLabel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/textPadding"
                android:text="Loaned Date"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/loanedDateText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/textPadding"
                android:text="TextView" />

            <TextView
                android:id="@+id/returnDateLabel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/textPadding"
                android:text="Return Date"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/returnDateText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/textPadding"
                android:justificationMode="inter_word"
                android:text="TextView" />

            <TextView
                android:id="@+id/fineLabel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/textPadding"
                android:text="Fine Amount"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/fineText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/textPadding"
                android:justificationMode="inter_word"
                android:text="TextView" />

            <TextView
                android:id="@+id/idLoanText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="TextView"
                android:visibility="gone" />

            <Button
                android:id="@+id/button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Return Book"
                android:onClick="returnBook"/>

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>